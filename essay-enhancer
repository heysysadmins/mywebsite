            // Loop through each word replacement and apply it to the essay
            let enhancedEssay = essay;
            for (let word in wordReplacements) {
                const regex = new RegExp("\\b" + word + "\\b", "gi");
                enhancedEssay = enhancedEssay.replace(regex, wordReplacements[word]);
            }

            // Display the enhanced essay
            document.getElementById('result').innerText = enhancedEssay || "Please paste your essay.";
